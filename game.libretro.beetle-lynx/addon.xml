<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.beetle-lynx"
		name="Lynx (beetle)"
		version="1.0.1"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="game.libretro.beetle-lynx.so"
                   library_linux="game.libretro.beetle-lynx.so"
                   library_osx="game.libretro.beetle-lynx.dylib"
                   library_windx="game.libretro.beetle-lynx.dll"
                   library_wingl="game.libretro.beetla-lynx.dll">
		<platforms>lynx</platforms>
		<extensions>lynx</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Beetla-lynx v1.0.1</summary>
		<description>Source: https://github.com/libretro/beetle-lynx-libretro</description>
		<platform>all</platform>
